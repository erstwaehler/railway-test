{
  "$schema": "https://railway.app/railway.schema.json",
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": {
    "backend": {
      "name": "backend",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "apps/backend/Dockerfile"
      },
      "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "variables": {
        "DATA_DIR": "/run/media",
        "CACHE_TTL_SECS": "60",
        "CORS_ORIGIN": "${{ frontend.url }}",
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "volumes": [
        {
          "name": "backend-data",
          "mountPath": "/run/media"
        }
      ],
      "healthcheck": {
        "path": "/health",
        "interval": 30,
        "timeout": 10,
        "retries": 3
      }
    },
    "frontend": {
      "name": "frontend",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "apps/frontend/Dockerfile"
      },
      "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "variables": {
        "VITE_API_URL": "${{ backend.url }}/api",
        "VITE_SSE_URL": "${{ backend.url }}/api/events/stream",
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "healthcheck": {
        "path": "/",
        "interval": 30,
        "timeout": 10,
        "retries": 3
      },
      "dependsOn": [
        "backend"
      ]
    }
  }
}
